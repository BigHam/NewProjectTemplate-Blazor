<HxDisplayLayout @ref="hxDisplayLayout" DisplayMode="@DisplayMode">
	<HeaderTemplate>

		@(model.Id == default ? GlobalLocalizer.NewRecord : GetExchangeRateLabel(model))

	</HeaderTemplate>
	<BodyTemplate>

		<EditForm id="@nameof(ExchangeRateEdit)" Model="model" OnValidSubmit="HandleValidSubmit">
			<DataAnnotationsValidator />

			<CurrencyPicker Label="@ExchangeRateLocalizer.Currency" @bind-Value="model.CurrencyId" />
			<HxInputDate Label="@ExchangeRateLocalizer.DateFrom" @bind-Value="model.DateFrom" />
			<HxInputNumber Label="@ExchangeRateLocalizer.Rate" @bind-Value="model.Rate" />

		</EditForm>

	</BodyTemplate>
	<FooterTemplate>

		<HxSubmit form="@nameof(ExchangeRateEdit)" Skin="(model.Id == default) ? ButtonSkins.Insert : ButtonSkins.Save" />

	</FooterTemplate>
</HxDisplayLayout>