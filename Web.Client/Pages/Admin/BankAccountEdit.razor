@if (this.LayoutDetailContext is null)
{
	<h1>@(model.Name ?? BankAccountLoc.New)</h1>
}

<EditForm Model="model" OnValidSubmit="HandleValidSubmit">
	<DataAnnotationsValidator />

	<HxInputText Label="@BankAccountLoc.Name" @bind-Value="model.Name" />
	<HxInputText Label="@BankAccountLoc.AccountNumber" @bind-Value="model.AccountNumber" />
	<HxInputText Label="@BankAccountLoc.BankName" @bind-Value="model.BankName" />
	<HxInputText Label="@BankAccountLoc.Iban" @bind-Value="model.Iban" />
	<HxInputText Label="@BankAccountLoc.SwiftBic" @bind-Value="model.SwiftBic" />

	<HxSubmit Skin="(model.Id == default) ? ButtonSkins.Insert : ButtonSkins.Save" />
</EditForm>