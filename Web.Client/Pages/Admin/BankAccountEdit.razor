<HxDisplayLayout @ref="hxDisplayLayout" DisplayMode="@DisplayMode">
	<HeaderTemplate>

		@(model.Name ?? BankAccountLoc.New)

	</HeaderTemplate>
	<BodyTemplate>

		<EditForm id="bank-account-edit" Model="model" OnValidSubmit="HandleValidSubmit">
			<DataAnnotationsValidator />

			<HxInputText Label="@BankAccountLoc.Name" @bind-Value="model.Name" />
			<HxInputText Label="@BankAccountLoc.AccountNumber" @bind-Value="model.AccountNumber" />
			<HxInputText Label="@BankAccountLoc.BankName" @bind-Value="model.BankName" />
			<HxInputText Label="@BankAccountLoc.Iban" @bind-Value="model.Iban" />
			<HxInputText Label="@BankAccountLoc.SwiftBic" @bind-Value="model.SwiftBic" />
		</EditForm>

	</BodyTemplate>
	<FooterTemplate>

		<HxSubmit form="bank-account-edit" Skin="(model.Id == default) ? ButtonSkins.Insert : ButtonSkins.Save" />

	</FooterTemplate>
</HxDisplayLayout>
