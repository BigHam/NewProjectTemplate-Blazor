<HxDisplayLayout @ref="hxDisplayLayout" DisplayMode="DisplayMode" OnClosed="OnClosed">
	<HeaderTemplate>

		@(model.Name ?? BankAccountLocalizer.New)

	</HeaderTemplate>
	<BodyTemplate>

		<EditForm id="bank-account-edit" Model="model" OnValidSubmit="HandleValidSubmit">
			<DataAnnotationsValidator />

			<HxInputText Label="@BankAccountLocalizer.Name" @bind-Value="model.Name" />
			<HxInputText Label="@BankAccountLocalizer.AccountNumber" @bind-Value="model.AccountNumber" />
			<HxInputText Label="@BankAccountLocalizer.BankName" @bind-Value="model.BankName" />
			<HxInputText Label="@BankAccountLocalizer.Iban" @bind-Value="model.Iban" />
			<HxInputText Label="@BankAccountLocalizer.SwiftBic" @bind-Value="model.SwiftBic" />
		</EditForm>

	</BodyTemplate>
	<FooterTemplate>

		<HxSubmit FormId="bank-account-edit" Skin="(model.Id == default) ? ButtonSkins.Insert : ButtonSkins.Save" />

	</FooterTemplate>
</HxDisplayLayout>
