<HxDisplayLayout @ref="hxDisplayLayout" DisplayMode="DisplayMode" OnClosed="OnClosed">
    <HeaderTemplate>
        @(model.Code ?? CurrencyLocalizer.New)
    </HeaderTemplate>
    <BodyTemplate>
        <EditForm id="currency-edit" Model="model" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <HxInputText Label="@CurrencyLocalizer.Code" @bind-Value="model.Code" />
            <text>TBD: Default bank account picker</text>
        </EditForm>
    </BodyTemplate>
    <FooterTemplate>
        <HxSubmit form="currency-edit" Skin="(model.Id == default) ? ButtonSkins.Insert : ButtonSkins.Save" />
    </FooterTemplate>
</HxDisplayLayout>